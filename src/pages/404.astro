---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
---

<MainLayout title="CraftSupport - 404" transition:animate="fade">
    <div class="w-full text-gray-900 dark:text-gray-100 px-4 sm:px-6 md:px-8 lg:px-12 py-20 md:py-32">
        <div class="mx-auto max-w-7xl text-center">
            <h1 class="text-6xl md:text-7xl font-bold text-gray-900 dark:text-gray-100 mb-4">404</h1>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">Page Not Found</h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-12">
                The page you're looking for doesn't exist or has moved. Let's get you back on track.
            </p>
            <a
                href="/"
                class="inline-block px-8 py-3 bg-sky-600 hover:bg-sky-700 text-white font-semibold rounded-lg transition"
            >
                Return Home
            </a>
        </div>
    </div>
</MainLayout>
