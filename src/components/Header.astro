<div class="bg-[#12141D] sticky top-0 z-50 border-b border-gray-800">
    <header class="relative w-full">
        <nav class="mx-auto w-full px-4 md:px-6 lg:px-8 xl:px-12 text-white py-4 flex justify-between items-center">
            <a href="/" class="flex flex-shrink-0 transition ease-in-out hover:scale-105 active:scale-100">
                <img
                    src="/logo.webp"
                    alt="CraftSupport Logo"
                    class="h-10 sm:h-12 md:h-14 w-auto"
                />
            </a>

            <div class="hidden md:flex gap-6 lg:gap-8">
                <a href="/solutions" class="text-base lg:text-lg px-3 py-2.5 hover:underline underline-offset-4 transition font-semibold">Solutions</a>
                <a href="/company" class="text-base lg:text-lg px-3 py-2.5 hover:underline underline-offset-4 transition font-semibold">Company</a>
                <a href="/case-studies" class="text-base lg:text-lg px-3 py-2.5 hover:underline underline-offset-4 transition font-semibold">Case Studies</a>
                <a href="/contact" class="text-base lg:text-lg px-3 py-2.5 hover:underline underline-offset-4 transition font-semibold">Contact</a>
            </div>

            <button id="mobile-menu-toggle" class="md:hidden p-2 hover:bg-gray-800/50 rounded transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </nav>

        <div id="mobile-menu" class="hidden md:hidden border-t border-gray-800 bg-gray-900/50 overflow-hidden">
            <nav class="px-4 py-4 space-y-2">
                <a href="/solutions" class="block px-4 py-3 text-white hover:bg-gray-800/50 rounded transition font-semibold">Solutions</a>
                <a href="/company" class="block px-4 py-3 text-white hover:bg-gray-800/50 rounded transition font-semibold">Company</a>
                <a href="/case-studies" class="block px-4 py-3 text-white hover:bg-gray-800/50 rounded transition font-semibold">Case Studies</a>
                <a href="/contact" class="block px-4 py-3 text-white hover:bg-gray-800/50 rounded transition font-semibold">Contact</a>
            </nav>
        </div>
    </header>
</div>

<script is:inline>
    function updateActiveLink() {
        const currentPath = window.location.pathname;
        const desktopLinks = document.querySelectorAll('.hidden.md\\:flex a');
        const mobileLinks = document.querySelectorAll('#mobile-menu a');
        
        const allLinks = [...desktopLinks, ...mobileLinks];
        allLinks.forEach(link => {
            const href = link.getAttribute('href');
            if (href === currentPath) {
                link.classList.add('text-sky-400');
            } else {
                link.classList.remove('text-sky-400');
            }
        });
    }

    updateActiveLink();
    document.addEventListener('astro:page-load', updateActiveLink);
</script>
